</head>

<body>
  <!-- Navbar pulled from partials/ directory -->
  <%- include('partials/_navbar') %>
  <!-- SOCKET.IO HTML -->
  <%- include('partials/_chatbox') %>

  <header>
    <!-- Empty on login page? -->
  </header>

  <main>

    <!-- LOGIN FORM username/password forms + button -->
    <h2>Login:</h2>

    <form action="/login" method="POST">
      <div>
        <label for="email">Email address</label>
        <input class="form-control" type="email" name="email" placeholder="Email" />
      </div>

      <div>
        <label for="password">Password</label>
        <input class="form-control" type="password" name="password" placeholder="Password" />
      </div>

      <button type="submit">Login</button>
    </form>

    <!-- Testing if /login registers you are a USER or ADMIN + testing login reminder-->
    <p>Cheat sheet:<br> 
      ADMIN: merak@gmail.com <br> 
      USERS: kyle@gmail.com (DEFAULT) / ben@gmail.com</p>

    <% if (cookie==="userType=user" ) { %>
      <% console.log("LOGGED IN AS USER")%>
        <% } %>

          <% if (cookie==="userType=admin" ) { %>
            <% console.log("LOGGED IN AS ADMIN")%>
              <% } %>

  </main>
</body>

</html>
