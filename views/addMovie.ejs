<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/nav.css">
  <link rel="stylesheet" href="/styles/header.css">
  <link rel="stylesheet" href="/styles/chatbox.css">
  <link rel="stylesheet" href="/styles/addMovie.css">

  <!-- LOGO FONT -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Dela+Gothic+One&display=swap" rel="stylesheet">
  <!-- Font Awesome CDN -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
  <!-- SOCKET.IO CODE -->
  <script defer src="/socket.io/socket.io.js"></script>
  <script defer src="/scripts/socket.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <!-- Navbar pulled from partials/ directory -->
  <%- include('partials/_navbar') %>
    <!-- SOCKET.IO HTML -->
    <%- include('partials/_chatbox') %>

      <main>

        <div class="addMovieContainerStyling">
            <form action="/addMovie" method="POST" id="addMovieForm">

              <div class="movieTitle">
                <input type="text" id="title" name="title" placeholder=" Title" class="roundMe">
              </div>

              <div class="moviePrice">
                <input type="number" id="price" name="price" placeholder=" Price" class="roundMe">
              </div>

              <div class="movieQuality">
                <input type="number" id="quality" name="quality" placeholder=" Quality" class="roundMe">
              </div>

              <div class="movieYear">
                <input type="number" name="year" id="year" placeholder=" Year" class="roundMe">
              </div>

              <div class="movieGenre">
                <select id="genre_id" name="genre_id" class="roundMe">
                  <option>--Select Genre--</option>
                  <option value="1">Horror</option>
                  <option value="2">Thriller</option>
                  <option value="3">Comedy</option>
                  <option value="4">Action</option>
                  <option value="5">Family</option>
                  <option value="6">Crime</option>
                </select>
              </div>

              <div class="addMovieButton">
                <button type="submit" id="search-button">Add Movie</button>
              </div>

            </form>
        </div>

      </main>

</body>

</html>